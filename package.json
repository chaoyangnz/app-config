{
  "name": "@cloudaffine/app-config",
  "version": "0.2.0",
  "description": "Application properties/json/yaml config like Spring boot does. Integrated with Angular and NestJS",
  "author": "Chao Yang <chao@yang.to>",
  "license": "MIT",
  "repository": "git+https://github.com/cloudaffine/app-config.git",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:lib",
    "build:lib": "tsc --outDir lib --module commonjs",
    "clean": "rimraf dist es lib coverage",
    "typecheck": "tsc --noEmit",
    "lint": "tslint --project tsconfig.json --format stylish",
    "format": "prettier '**/*.{md,js,jsx,json,ts,tsx}' --write",
    "test": "jest --env=jsdom --coverage",
    "test:watch": "jest --env=jsdom --watch --updateSnapshot",
    "prebuild": "npm run clean",
    "postbuild": "rimraf {lib,es}/**/__tests__ {lib,es}/**/*.{spec,test}.{js,d.ts,js.map} && cp -rf package.json lib && cp -rf *.md lib",
    "posttest": "npm run typecheck && npm run lint",
    "preversion": "npm test",
    "postversion": "git push && git push --tags",
    "dist": "npm run build && cd lib && npm publish --access public"
  },
  "keywords": [
    "application.properties",
    "application.yaml",
    "application.json",
    "angular",
    "nestjs"
  ],
  "files": [
    "*"
  ],
  "dependencies": {
    "java-properties": "^1.0.2",
    "lodash": "^4.17.15",
    "mime-types": "^2.1.26",
    "tslib": "^1.9.3",
    "yaml": "^1.8.3"
  },
  "devDependencies": {
    "@angular/common": "^9.0.7",
    "@angular/core": "^9.0.7",
    "@nestjs/common": "^7.0.4",
    "@nestjs/core": "^7.0.4",
    "@types/jest": "^23.0.0",
    "@types/lodash": "^4.14.149",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^8.0.0",
    "@types/yaml": "^1.2.0",
    "dts-bundle": "^0.7.2",
    "jest": "^23.6.0",
    "pascal-case": "^2.0.1",
    "prettier": "^1.13.7",
    "rimraf": "^2.6.1",
    "rollup": "^0.66.6",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-builtins": "^2.1.0",
    "rollup-plugin-node-globals": "^1.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-sourcemaps": "^0.4.1",
    "rollup-plugin-terser": "^3.0.0",
    "rxjs": "^6.5.4",
    "semver": "^6.3.0",
    "ts-jest": "~23.10.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-plugin-prettier": "^2.0.0",
    "typescript": "^3.1.4",
    "utility-types": "^3.10.0"
  }
}
